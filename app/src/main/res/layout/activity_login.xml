<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:layout_margin="16dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prijava @ Srednje škole"
        android:textSize="26sp"
        android:id="@+id/txtNaslov"
        android:textAlignment="center"
        />

        <EditText
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtKorisnickoIme"
            android:hint="Korisničko ime..."
            android:layout_below="@+id/txtNaslov"
            android:maxLines="1"
            android:imeOptions="actionNext"
            />

    <EditText
        android:id="@+id/txtLozinka"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="********"
        android:layout_below="@+id/txtKorisnickoIme"
        android:maxLines="1"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        />

    <TextView
        android:id="@+id/txtZaboravljenaLozinka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:layout_below="@+id/txtLozinka"
        android:layout_marginTop="16dp"
        android:text="Zaboravili ste lozinku?"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtZaboravljenaLozinka"
        android:text="PRIJAVA"
        />
</RelativeLayout>